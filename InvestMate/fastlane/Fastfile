# update_fastlane

default_platform(:ios)

platform :ios do
  # ===============================
  # ë² íƒ€ ë°°í¬: TestFlight ì—…ë¡œë“œë§Œ
  # ===============================
  desc "ë°°í¬: TestFlight ì „ìš© (Beta)"
  lane :beta do
    prepare_build

    upload_to_testflight(
      api_key_path: "fastlane/asc_api_key.json",
      skip_waiting_for_build_processing: true
    )

    send_discord(message: "ğŸš€ ë² íƒ€ ë°°í¬ ì„±ê³µ! TestFlight ì—…ë¡œë“œ ì™„ë£Œ")
  rescue => error
    send_discord(message: "âŒ ë² íƒ€ ë°°í¬ ì‹¤íŒ¨: #{error.message}")
    raise error
  end

  # ===============================
  # ë¦´ë¦¬ì¦ˆ ë°°í¬: TestFlight + App Store
  # ===============================
  desc "ë°°í¬: TestFlight + App Store (Release)"
  lane :release do
    prepare_build

    upload_to_app_store(
      api_key_path: "fastlane/asc_api_key.json",
      submit_for_review: false,
      skip_metadata: false,
      skip_screenshots: true,
      precheck_include_in_app_purchases: false,
      copyright: "Â© #{Time.now.year} KAI.",
      automatic_release: true,
      release_notes: {
  	"en-US" => "Bug fixes and stability improvements",
	 "ko" => "ë²„ê·¸ ìˆ˜ì • ë° ì•ˆì •ì„± ê°œì„ "
      },
      submission_information: {    
         export_compliance_encryption_updated: false,
         export_compliance_uses_encryption: false,
         add_id_info_uses_idfa: false
      },
      force: true
    )

    send_discord(message: "âœ… ë¦´ë¦¬ì¦ˆ ë°°í¬ ì„±ê³µ! TestFlight + App Store ì—…ë¡œë“œ ì™„ë£Œ")
  rescue => error
    send_discord(message: "âŒ ë¦´ë¦¬ì¦ˆ ë°°í¬ ì‹¤íŒ¨: #{error.message}")
    raise error
  end

  # ===============================
  # ê³µí†µ ì‘ì—…: match, ë¹Œë“œë²ˆí˜¸ ì¦ê°€, ë¹Œë“œ
  # ===============================
  private_lane :prepare_build do
    setup_ci

    match(
      type: "appstore",
      readonly: true,
      api_key_path: "fastlane/asc_api_key.json"
    )

    increment_build_number(
      xcodeproj: "Projects/InvestMate/InvestMate.xcodeproj"
    )

    build_app(
      workspace: "InvestMateWorkspace.xcworkspace",
      scheme: "InvestMate",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "io.hogeunjo.InvestMate" => "match AppStore io.hogeunjo.InvestMate"
        }
      }
    )
  end

  # ===============================
  # Discord Webhook ì•Œë¦¼
  # ===============================
  private_lane :send_discord do |options|
  require 'date'

  message      = options[:message]
  webhook_url  = ENV['DISCORD_WEBHOOK_URL']

  # ë¹Œë“œ ì •ë³´ ìˆ˜ì§‘
  version      = get_version_number(xcodeproj: "Projects/InvestMate/InvestMate.xcodeproj")
  build_number = get_build_number(xcodeproj: "Projects/InvestMate/InvestMate.xcodeproj")
  scheme       = "InvestMate"
  target       = "io.hogeunjo.InvestMate"
  git_hash     = sh("git rev-parse --short HEAD").strip
  branch       = sh("git rev-parse --abbrev-ref HEAD").strip
  timestamp    = DateTime.now.strftime("%Y-%m-%d %H:%M:%S")

  # ë””ìŠ¤ì½”ë“œ ë©”ì‹œì§€ í¬ë§·
  payload = {
    content: message,
    embeds: [
      {
        title: "ğŸ“¦ ë°°í¬ ì •ë³´",
        fields: [
          { name: "Version", value: "#{version} (#{build_number})", inline: true },
          { name: "Target", value: target, inline: true },
          { name: "Scheme", value: scheme, inline: true },
          { name: "Branch", value: branch, inline: true },
          { name: "Git Commit", value: git_hash, inline: true },
          { name: "Time", value: timestamp, inline: false }
        ]
      }
    ]
  }

  # JSON ë¬¸ìì—´ë¡œ ë³€í™˜
  require 'json'
  json_payload = payload.to_json

  sh %Q(curl -H "Content-Type: application/json" -X POST -d '#{json_payload}' #{webhook_url})
  end
end